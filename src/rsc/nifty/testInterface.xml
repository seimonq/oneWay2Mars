				</panel>
				<panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="vertical"
				       backgroundColor="#88f8">
					<text text="Treibstoff:" font="Interface/Fonts/Default.fnt" />
					<control id="treibstoff" name="textfield" maxLength="20" />
					<text text="Nutzlast:" font="Interface/Fonts/Default.fnt" />
					<control id="nutzlast" name="textfield" maxLength="20" />
				</panel>
			</panel>
		</layer>
	</screen>

</nifty>