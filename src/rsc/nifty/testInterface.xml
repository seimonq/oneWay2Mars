			       backgroundColor="#f008">
				<text text="One Way 2 Mars" font="Interface/Fonts/Default.fnt" width="100%" />

				<text id="synopsis" text="&#10;&#10; Ich bin Elon. Ich wurde programmiert, um die erste humaniode Mars Mission zu steuern.
							&#10;Nat체rlich ohne R체ckflugticket..." font="Interface/Fonts/Default.fnt" wrap="true" width="60%" />

			</panel>
			<panel id="panel_mid" height="50%" width="90%" align="center" childLayout="center"
			       backgroundColor="#0f08">

				<text id="inhalt" text="Kein Test l채uft, verteile 500 T." font="Interface/Fonts/Default.fnt" wrap="true" width="60%"/>

